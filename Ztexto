function validarDatos(datos) {
  if (!datos) throw new Error("Sin datos");
  // Permitir arrays vac√≠os
  if (Array.isArray(datos)) return true;
  if (datos.length === 0) throw new Error("Datos sin elementos");
  return true;
}
// MOD-003: FIN

El usuario usar√° CodeWorkShop para reemplazar SOLO ese m√≥dulo.

5. EJEMPLO COMPLETO - Archivo .GS
// MOD-001: ENCABEZADO [INICIO]
/*
*****************************************
PROYECTO: Control de Inventario
ARCHIVO: inventario.gs
VERSI√ìN: 01.00
FECHA: 10/01/2026 14:35 (UTC-5)
*****************************************
*/
// MOD-001: FIN

// MOD-002: CONFIGURACI√ìN [INICIO]
const CONFIG = {
  hoja: "Inventario",
  colProducto: 0,
  colStock: 1
};
// MOD-002: FIN

// MOD-003: OBTENER HOJA [INICIO]
function obtenerHoja() {
  return SpreadsheetApp.getActiveSpreadsheet()
    .getSheetByName(CONFIG.hoja);
}
// MOD-003: FIN

// MOD-004: BUSCAR PRODUCTO [INICIO]
function buscarProducto(codigo) {
  const hoja = obtenerHoja();
  const datos = hoja.getDataRange().getValues();
  
  for (let i = 1; i < datos.length; i++) {
    if (datos[i][CONFIG.colProducto] === codigo) {
      return {
        fila: i + 1,
        stock: datos[i][CONFIG.colStock]
      };
    }
  }
  return null;
}
// MOD-004: FIN

// MOD-005: ACTUALIZAR STOCK [INICIO]
function actualizarStock(codigo, cantidad) {
  const prod = buscarProducto(codigo);
  if (!prod) throw new Error("Producto no encontrado");
  
  const hoja = obtenerHoja();
  const nuevoStock = prod.stock + cantidad;
  hoja.getRange(prod.fila, CONFIG.colStock + 1).setValue(nuevoStock);
  
  return nuevoStock;
}
// MOD-005: FIN

// MOD-006: C√ìDIGO DE CIERRE [INICIO]
// Log de inicializaci√≥n
Logger.log('Sistema de inventario cargado');
Logger.log('Versi√≥n: 01.00');

// Validaci√≥n inicial
if (!CONFIG.hoja) {
  throw new Error('Configuraci√≥n incompleta');
}
// MOD-006: FIN

// MOD-007: NOTAS [INICIO]
/*
DESCRIPCI√ìN:
Sistema b√°sico de inventario con b√∫squeda y actualizaci√≥n de stock.

DEPENDENCIAS:
- MOD-003: Requiere hoja "Inventario" en el Spreadsheet
- MOD-004: Usa configuraci√≥n de MOD-002
- MOD-005: Llama a MOD-003 y MOD-004

ADVERTENCIAS:
- MOD-004: Devuelve null si no encuentra el producto
- MOD-005: Lanza error si producto no existe
- MOD-006: Valida configuraci√≥n al cargar el script

PR√ìXIMAS MEJORAS:
- Agregar validaci√≥n de cantidad negativa
- Implementar registro de movimientos
- Agregar cach√© para b√∫squedas frecuentes
*/
// MOD-007: FIN


