    }
    
    /* === GRID DEL CALENDARIO === */
    
    .calendario-grid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 1px;
      background: #ddd;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
    }
    
    /* === HEADERS DE D√çAS === */
    
    .calendario-dia-header {
      background: #f5f5f5;
      padding: 12px;
      text-align: center;
      font-weight: 600;
      font-size: 14px;
      color: #333;
      border-bottom: 2px solid #ddd;
    }
    
    /* === CELDAS DEL CALENDARIO === */
    
    .calendario-celda {
      background: white;
      min-height: 100px;
      padding: 8px;
      cursor: pointer;
      transition: all 0.2s;
      position: relative;
    }
    
    .calendario-celda:hover {
      background: #f8f9fa;
      transform: scale(1.02);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    /* D√≠a fuera del mes actual */
    .calendario-celda.fuera-mes {
      background: #e0e0e0;
      cursor: default;
    }
    
    .calendario-celda.fuera-mes:hover {
      background: #e0e0e0;
      transform: none;
      box-shadow: none;
    }
    
    /* D√≠a actual */
    .calendario-celda.hoy {
      border: 3px solid #667eea;
      box-shadow: 0 0 10px rgba(102, 126, 234, 0.3);
    }
    
    /* N√∫mero del d√≠a */
    .calendario-dia-numero {
      font-size: 16px;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
    }
    
