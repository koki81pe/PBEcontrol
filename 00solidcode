    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .horario-grid th {
    padding: 12px 8px;
    text-align: center;
    font-weight: 600;
    font-size: 13px;
  }

  .horario-grid th.col-hora {
    min-width: 70px;
    font-size: 12px;
  }

