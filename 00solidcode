  <!-- ========================================== -->
  <!-- LOADING SCREEN -->
  <!-- ========================================== -->
  <div class="loading-screen" id="loadingScreen">
    <div class="spinner-large"></div>
    <div class="loading-text">Cargando datos...</div>
  </div>

  <!-- ========================================== -->
  <!-- NAVBAR -->
  <!-- ========================================== -->
  <div class="navbar">
    <div class="navbar-brand">
      <h1>PBE Control</h1>
    </div>
