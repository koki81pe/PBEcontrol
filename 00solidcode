            <option value="">Seleccionar curso...</option>
          </select>
        </div>

        <div class="form-group">
          <label>Hora Inicio <span class="required">*</span></label>
          <input 
            type="time" 
            id="claseHoraIni"
            min="07:00"
            max="22:00"
            required
          >
          <small>Rango: 07:00 - 22:00</small>
        </div>

        <div class="form-group">
          <label>Hora Fin <span class="required">*</span></label>
          <input 
            type="time" 
            id="claseHoraFin"
            min="07:00"
            max="22:00"
            required
