      }
      
      .lecturas-table th,
      .lecturas-table td {
        padding: 10px 12px;
      }
      
      /* Progreso m√°s compacto en mobile */
      .barra-progreso {
        height: 16px;
      }
      
      .progreso-text {
        font-size: 12px;
        min-width: 40px;
      }
    }
  </style>
