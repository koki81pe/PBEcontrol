    .btn-refresh:active {
      transform: scale(0.98);
    }
    
    /* ==========================================
       TABLA DE DEBERES
       ========================================== */
    
    .tabla-deberes-container {
      background: white;
      border-radius: 0 0 12px 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .tabla-deberes {
      width: 100%;
      border-collapse: collapse;
    }
    
    .tabla-deberes thead {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
